{
	"name": "@swc/bindings",
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/swc"
	},
	"main": "index.js",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"!(**/tests/**/*)*.js": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.jsx": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.ts": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.tsx": [
			"prettier --write"
		],
		"*.rs": [
			"rustfmt --"
		],
		"*.toml": [
			"taplo format"
		]
	},
	"devDependencies": {
		"@taplo/cli": "0.7.0",
		"@types/node": "22.9.1",
		"cross-env": "7.0.3",
		"cspell": "8.16.0",
		"lint-staged": "15.2.10",
		"npm-run-all": "4.1.5"
	}
}
